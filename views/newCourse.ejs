<!DOCTYPE html>
<html>
<head>
    <title>Add a New Course</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <%- include('navbar') %>
    <div class="container">
        <% if (user && user.role === 'teacher') { %>
            <h1 class="my-4">Add a New Course</h1>
            <form action="/courses" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Course Name:</label>
                    <input type="text" id="name" name="name" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea id="description" name="description" class="form-control" required></textarea>
                </div>
                <div class="mb-3">
                    <label for="subject" class="form-label">Subject Area:</label>
                    <input type="text" id="subject" name="subject" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="credits" class="form-label">Credits:</label>
                    <input type="number" id="credits" name="credits" class="form-control" min="1" max="5" required>
                </div>
                <button type="submit" class="btn btn-primary">Add Course</button>
            </form>
            <a href="/courses" class="btn btn-secondary mt-3">Back to Course List</a>
        <% } else { %>
            <h1 class="text-danger my-4">Access Denied</h1>
            <p class="text-muted">You do not have permission to access this page.</p>
            <a href="/courses" class="btn btn-secondary">Back to Course List</a>
        <% } %>
    </div>
    <%- include('_footer') %>
</body>
</html>
